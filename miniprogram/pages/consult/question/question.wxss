.page{
  height:100vh;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  position:relative;
}
.background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
/* 顶部切换 */
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  font-size: 30rpx;
  color: #bbbbbb;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
}
.navbar .item.active{
  color: #908df5;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  background: #908df5;
}
