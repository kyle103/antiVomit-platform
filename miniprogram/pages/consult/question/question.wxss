  .list-block{
    height:100%;
    display:flex;
    box-sizing:border-box;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    flex-wrap: wrap;
  }
  .questions-block{
    width:90%;
    height: 200rpx;
    margin: 20rpx 5%;
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  .question-info{
    height: 95%;
    width: 95%;
    margin: 2.5%;
  }
  .ava{
    /* width: 85rpx;
    height: 85rpx; */
    width: 85rpx;
    height: 85rpx;
    border-radius: 50%;
    position: absolute;
    top: 5%;
    left: 5%;
  }

  .question{
    width: 100%;
    height: 80%;
    font-size: 17px;
    color: #333333;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    word-break: break-all;
  }
  .bottom{
    display: flex;
    justify-content: space-between;
    height: 20%;
  }
  .date{
    color: #767676; 
    font-size: 27rpx;
    width: 45%;
  }

  .cuIcon-edit{
    font-size: 100rpx;
    color:rgb(3, 56, 38);
    position: fixed;
    bottom: 20rpx;
    left: 50%;
    margin-left: -50rpx;
    z-index: 99;
  }

  


  