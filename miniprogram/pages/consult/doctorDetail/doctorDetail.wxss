page {
  background-color:white;
}

.top {
  width: 100%;
  height: 250px;
  background: #b2aaff;
  padding-top: 15px;
  position: relative;
}

.center {
  width: 95%;
  height: 190px;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 15px;
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 80px;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid #EEEEEE;
}
.user_info{
  flex-flow: row nowrap;
  justify-content: space-between;
  display: flex;
  align-items: center;
}
.user_icon {
  width: 66px;
  height: 66px;
  border-radius: 50%;
  overflow: hidden;
}
.user_name{
  justify-content: center;
  margin-left: 50rpx;
  font-size: 20px;
}

.center_down {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 35px;
  margin: 0 auto;
}
.item{
  display: flex;
  flex-direction: row;
}

.center_rank {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.rank_text {
  height: 35px;
  line-height: 35px;
  margin-left: 0rpx;
  color: #AAAAAA;
}

.center_rank .rank_text{
  color:black;
}

.center_rank image {
  width: 35px;
  height: 35px;
}

.center_score {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.content{
  width: 100%;
  padding:10rpx; 
}
.title{
  font-size: 40rpx;
  font-weight: 600;
  margin: 5rpx;
}
.body{
  margin: 5rpx;
  color: gray;
}

.btn{
  /* position: fixed;
  left: 50%;
  margin-left: -45%;
  bottom: 100rpx; */
  margin:10rpx auto;
  width: 90%;
  height: 80rpx;
}
.btn #commit-btn {
  text-align: center;
  line-height: 50rpx;
  background-color: #b2aaff;
  color: white;
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 15rpx auto;
}
.btn #commit-btn:active {
  background-color: #6600ff;
}

