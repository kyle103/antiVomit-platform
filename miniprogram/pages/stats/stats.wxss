page {
  height: 100% !important;
  width: 100%;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 2rpx solid #777;

}
 
.tab-item {
  width: 33.3%;
  text-align: center;
  font-size: 15px;
  color: #777;
}
 
.swiper {
  height: 1400rpx;
  background: #dfdfdf;
}
 
.on {
  color: blue;
  border-bottom: 5rpx solid blue;
}
.message{
  display:flex;
  flex-direction: row;
  padding: 20rpx 20rpx 40rpx 20rpx;
}
.face-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.left{
  margin-right: 15rpx;
}
.right{
