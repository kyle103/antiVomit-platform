/* pages/me/verify/verify.wxss */
page {
  background-color: #a1a09e0b;
}

input{
  text-align: right;
}

.itembar {
  flex-flow: row nowrap;
  justify-content: space-between;
  display: flex;
  margin-top: 5rpx;
  background-color: #fff;
  padding: 20rpx ;
  font-size: 35rpx;
}
.auth{
  margin-top: 5rpx;
  background-color: #fff;
  padding: 20rpx ;
  font-size: 35rpx;
}
.tip {
  margin-left: 15rpx;
}

.group {
  height: 5%;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.group .image_item {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
  position: relative;
}
.group .image_item .delete-btn {
  position: absolute;
  top: 0;
  right: 0;
}
.group .selectpic {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background-color: #e0e0e0;
}
.group .selectpic .cuIcon-add {
  font-size: large;
}
.btn{
  position: fixed;
  left: 50%;
  margin-left: -45%;
  bottom: 100rpx;
  width: 90%;
  height: 80rpx;
}
.btn #commit-btn {
  text-align: center;
  line-height: 50rpx;
  background-color: #b2aaff;
  color: white;
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 15rpx auto;
}
.btn #commit-btn:active {
  background-color: #6600ff;
}